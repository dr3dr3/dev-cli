{
    "name": "DR3-CLI-TOOLS",

    "build": {
        "dockerfile": "Dockerfile"
    },

    "postCreateCommand": "echo '' && figlet -k -c 'DR3 CLI TOOLS' && echo 'Welcome to the DR3 CLI Tools development environment!' && echo ''",

    "customizations": {
        "vscode": {
            "extensions": [
                "github.vscode-pull-request-github",
                "github.copilot",
                "redhat.vscode-yaml",
                "ms-kubernetes-tools.vscode-kubernetes-tools"
            ]
        }
    },

    "forwardPorts": [
        8080
    ]
}
